    "module": "umd",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "classic"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
